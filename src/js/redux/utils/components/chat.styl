
.chat 
    z-index 1000000
    position fixed
    bottom -501px
    width 340px
    border-radius .5em .5em 0 0
    overflow hidden
    height 547px
    /* Center component */
    left: 50%;
    margin-left: -170px; /* Negative half of width. */
    
    &-title 
        
        height 45px
        line-height 45px
        &:hover
            >a  
                text-decoration underline
        >a 
            display block
            transition .3s  
    >iframe 
        width 100%
        height 500px
        border none
        overflow hidden
      
            
@media (min-width: 576px)
    .chat 
        left initial 
        right 20px